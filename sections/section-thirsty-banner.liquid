<!-- /sections/section-thirsty-banner.liquid -->

<div class="section--image fade-in-child js-overflow-container"
  data-section-id="{{ section.id }}"
  data-section-type="thirsty-banner"
  style="
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;">
  <div class="{{ section.settings.width }} section-padding">
    <div class="section__inner">
      <div class="hero__content__wrapper {{ section.settings.text_align }}">
        <div class="hero__content {{ section.settings.color_bg }}">
          <div class="text__standard {{ section.settings.text_color }}">
            <div class="thirsty-banner__content">
              {% if section.settings.kicker_text != blank %}
                <div class="hero__kicker">
                  <p>✦ {{ section.settings.kicker_text }}</p>
                </div>
              {% endif %}

              {% if section.settings.rating_text != blank %}
                <div class="hero__rating">
                  <p>★★★★★ {{ section.settings.rating_text }}</p>
                </div>
              {% endif %}

              {% if section.settings.heading != blank %}
                <div class="hero__title">
                  <h2>{{ section.settings.heading }}</h2>
                </div>
              {% endif %}

              {% if section.settings.button_text != blank %}
                <div class="hero__cta__wrapper">
                  <a href="{{ section.settings.button_link }}" 
                     class="standard__cta hero__btn {{ section.settings.button_style }} {{ section.settings.button_color }} {{ section.settings.button_size }}">
                    {{ section.settings.button_text }}
                  </a>
                </div>
              {% endif %}
            </div>

            {% if section.settings.image != blank %}
              <div class="thirsty-banner__image">
                {%- assign wh_ratio = section.settings.image.aspect_ratio | default: 1 -%}
                {% render 'image', 
                  img_object: section.settings.image,
                  max_width: section.settings.image_max_width,
                  wh_ratio: wh_ratio
                %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.hero__kicker {
  font-size: 1.5em;
  font-weight: bold;
  margin-bottom: 0.5em;
}

.hero__rating {
  font-size: 1.2em;
  font-weight: bold;
  margin-bottom: 1em;
}

.hero__title h2 {
  font-size: 4em;
  font-weight: bold;
  margin-bottom: 1em;
  line-height: 1.1;
}

.thirsty-banner__content {
  flex: 1;
  padding: 2em;
}

.thirsty-banner__image {
  flex: 1;
  max-width: 50%;
  padding: 2em;
}

.text__standard {
  display: flex;
  align-items: center;
  gap: 2em;
  width: 100%;
}

@media screen and (max-width: 768px) {
  .text__standard {
    flex-direction: column;
  }
  
  .thirsty-banner__image {
    max-width: 100%;
  }

  .hero__title h2 {
    font-size: 2.5em;
  }
}
</style>

{% schema %}
{
  "name": "Thirsty Banner",
  "settings": [
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "kicker_text",
      "label": "Kicker Text",
      "default": "OPENSOURCE"
    },
    {
      "type": "text",
      "id": "rating_text",
      "label": "Rating Text",
      "default": "1000+ QUENCHED"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Click if you're thirsty."
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP ELECTROLYTES"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "default": "btn",
      "options": [
        { "value": "btn", "label": "Solid button" },
        { "value": "btn--soft", "label": "Soft button" },
        { "value": "btn--outline", "label": "Outlined button" }
      ]
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button Size",
      "default": "btn--large",
      "options": [
        { "value": "btn--small", "label": "Small button" },
        { "value": "btn--medium", "label": "Medium button" },
        { "value": "btn--large", "label": "Large button" },
        { "value": "btn--long", "label": "Long button" }
      ]
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Button Color",
      "default": "btn--black",
      "options": [
        { "value": "btn--primary", "label": "Bright accent" },
        { "value": "btn--secondary", "label": "Secondary accent" },
        { "value": "btn--neutral", "label": "Text color" },
        { "value": "btn--black", "label": "Black" },
        { "value": "btn--white", "label": "White" }
      ]
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Image max width",
      "default": 500
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper--full",
      "options": [
        { "value": "wrapper--none", "label": "Full width" },
        { "value": "wrapper--full", "label": "Full width padded" },
        { "value": "wrapper", "label": "Page width" }
      ]
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "default": "align--middle-left",
      "options": [
        { "value": "align--middle-left", "label": "Left" },
        { "value": "align--middle-center", "label": "Center" },
        { "value": "align--middle-right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "text--neutral",
      "options": [
        { "value": "text--neutral", "label": "Normal text" },
        { "value": "text--white", "label": "White" },
        { "value": "text--primary", "label": "Primary accent" },
        { "value": "text--secondary", "label": "Secondary accent" },
        { "value": "text--black", "label": "Black" },
        { "value": "text--invert--primary", "label": "Primary dark accent" },
        { "value": "text--invert--secondary", "label": "Secondary dark accent" },
        { "value": "text--invert", "label": "Inverted text color" },
        { "value": "text--bright--primary", "label": "Primary bright accent" },
        { "value": "text--bright--secondary", "label": "Secondary bright accent" }
      ]
    },
    {
      "type": "select",
      "id": "color_bg",
      "label": "Background color",
      "default": "palette--light bg--neutral",
      "options": [
        { "value": "hero__content--transparent", "label": "Transparent" },
        { "value": "palette--light bg--neutral", "label": "White" },
        { "value": "palette--light bg--accent", "label": "Light" },
        { "value": "palette--dark bg--invert", "label": "Dark" },
        { "value": "palette--dark bg--invert--accent", "label": "Dark accent" },
        { "value": "palette--bright bg--bright", "label": "Bright" },
        { "value": "palette--bright bg--bright--accent", "label": "Bright accent" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Thirsty Banner",
      "settings": {
        "kicker_text": "OPENSOURCE",
        "rating_text": "1000+ QUENCHED",
        "heading": "Click if you're thirsty.",
        "button_text": "SHOP ELECTROLYTES",
        "text_color": "text--neutral",
        "color_bg": "palette--light bg--neutral"
      }
    }
  ]
}
{% endschema %}
